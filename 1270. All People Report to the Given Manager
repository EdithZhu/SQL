# Write your MySQL query statement below
SELECT EMPLOYEE_ID FROM EMPLOYEES
WHERE MANAGER_ID IN (
    SELECT EMPLOYEE_ID FROM EMPLOYEES
    WHERE MANAGER_ID IN (
        SELECT EMPLOYEE_ID FROM EMPLOYEES
        WHERE MANAGER_ID IN (
            SELECT EMPLOYEE_ID FROM EMPLOYEES
            WHERE EMPLOYEE_ID = 1
        )
    )
) AND EMPLOYEE_ID <> 1






/* Write your PL/SQL query statement below */
WITH E1 AS (
    SELECT EMPLOYEE_ID FROM EMPLOYEES 
    WHERE MANAGER_ID = 1 AND EMPLOYEE_ID != 1    
), E2 AS (
    SELECT TMP1.EMPLOYEE_ID FROM EMPLOYEES TMP1, E1
    WHERE MANAGER_ID = E1.EMPLOYEE_ID
), E3 AS (
    SELECT TMP2.EMPLOYEE_ID FROM EMPLOYEES TMP2, E2 
    WHERE MANAGER_ID = E2.EMPLOYEE_ID
)
SELECT * FROM E1
UNION SELECT * FROM E2
UNION SELECT * FROM E3;
