# Write your MySQL query statement below
SELECT DEPT.NAME AS DEPARTMENT, A.NAME AS EMPLOYEE, A.SALARY FROM
(
    SELECT E.*, DENSE_RANK() OVER
    (
        PARTITION BY DEPARTMENTID ORDER BY SALARY DESC
    ) AS TOP
    FROM EMPLOYEE E
) AS A
JOIN DEPARTMENT DEPT
ON A.DEPARTMENTID = DEPT.ID
WHERE TOP = 1;




/* Write your PL/SQL query statement below */
SELECT DEPARTMENT, EMPLOYEE, SALARY FROM 
(
    SELECT DEPT.NAME AS DEPARTMENT, E.NAME AS EMPLOYEE, E.SALARY,
    DENSE_RANK() OVER
    (
        PARTITION BY E.DEPARTMENTID ORDER BY E.SALARY DESC
    ) AS TOP
    FROM EMPLOYEE E
    JOIN DEPARTMENT DEPT
    ON E.DEPARTMENTID = DEPT.ID
)
WHERE TOP = 1








